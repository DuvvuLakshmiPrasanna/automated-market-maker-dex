FROM ubuntu:22.04
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y python3 python3-pip wget ca-certificates unzip git build-essential && rm -rf /var/lib/apt/lists/*
# Install solc 0.8.19 (static)
RUN pip3 install --no-cache-dir solc-select
# install solc 0.8.19 via solc-select
RUN solc-select install 0.8.19 || true
RUN solc-select use 0.8.19 || true
# Install slither
RUN pip3 install --no-cache-dir slither-analyzer

WORKDIR /tmp
CMD ["/bin/bash"]
